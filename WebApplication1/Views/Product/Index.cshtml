@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3 min-vh-100">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Product List</h2>
		    </div>
        </div>
            <br /><br />

    <div class="row mb-3">
        <div class="col-6">
            <form class="d-flex">
                <input class="form-control me-sm-2" type="text" placeholder="Search for a product" style="width:40%">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>

         <div class="col-6 text-end">
             <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
	         </a>
		 </div>
    </div>

    <table class="table table-bordered table-striped text-center" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    In-Stock
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="6%">
                        @obj.Id
				    </td>
                     <td width="20%">
                        @obj.Name
                    </td>
                    <td width="6%">
                        @obj.Quantity
				    </td>
                    <td width="10%">
                        <div class="w-65 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-1"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-warning mx-1"> <i class="bi bi-trash-fill"></i>Delete</a>
					    </div>
				    </td>
			    </tr>
            }
        </tbody>
    </table>
</div>
